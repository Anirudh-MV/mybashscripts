
#!/bin/bash

if [[ $1 =~ "@" ]]
then
	ssh -o ServerAliveInterval=180 -o ServerAliveCountMax=2 -i /home/ani/private_key_openssh_without_passphrase $1
else
	echo "************************************"
	echo "Check username"
	echo "Trying username as ubuntu by default"
	echo "************************************"
	ssh -o ServerAliveInterval=180 -o ServerAliveCountMax=2 -i /home/ani/private_key_openssh_without_passphrase ubuntu@$1
fi
